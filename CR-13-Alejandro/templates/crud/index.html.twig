{% extends 'base.html.twig' %}
{% block body %}

<div class='container'>
    <div class='row'>
        {% for event in events %}    
        <div class="card col-md-6 col-lg-3 mb-5 pt-2 pb-2 bg-light">
            <img class="card-img-top" src="{{event.image}}">
                <div class="card-body">
                    <h5 class="card-title">{{event.name}}</h5>
                    <p class="card-text">where? {{event.address}}</p>
                    <p class="card-text"><small class="text-muted">Date: {{event.date}}</small></p>
                </div>
            <a href="/details/{{event.id}}" class= "btn btn-success">View</a>    
            <a  href="/edit/{{event.id}}" class= "btn btn-warning">Edit</a>
            <a href="/delete/{{event.id}}"  class="btn btn-danger">Delete</a >   
        </div>
        {% endfor %}
    </div>
</div>

{% endblock  %}